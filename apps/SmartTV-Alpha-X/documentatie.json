                    "token_type": "string",
                    "byte_size": 256,
                    "regex-rule": "[0-9]*",
                    "optional": false
                }
            ]
        },
        "insertUser": {
            "token_delimitators": "",
            "protocol": "HTTP",
            "prefix": "curl -X POST localhost:9080/insertUser",
            "buffer-tokens": [
                {
                    "name": "Username",
                    "description": "The name that username used for the account",
                    "token_type": "string",
                    "byte_size": 256,
                    "regex-rule": "[a-zA-Z0-9 ]*",
                    "optional": false
                },
                {
                    "name": "Age",
                    "description": "The age of the user",
                    "token_type": "string",

                {
                    "name": "Channel genre",
                    "description": "A type of channel genre in order to get suggested channels by genre",
                    "token_type": "string",
                    "byte_size": 256,
                    "regex-rule": "[a-zA-Z ]*",
                    "optional": false
                },
                {
                    "name": "Age",
